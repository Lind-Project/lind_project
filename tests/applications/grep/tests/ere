. "${srcdir=.}/init.sh"; path_prepend_ ../src

fail=0

# . . . and the following by Henry Spencer.

${AWK-awk} -f $abs_top_srcdir/tests/ere.awk $abs_top_srcdir/tests/ere.tests \
  > ere.script || fail=1

${re_shell-${SHELL-sh}} ere.script || fail=1

Exit $fail
