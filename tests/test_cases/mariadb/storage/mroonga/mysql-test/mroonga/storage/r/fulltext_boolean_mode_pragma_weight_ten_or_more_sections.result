DROP TABLE IF EXISTS memos;
SET NAMES utf8;
CREATE TABLE memos (
title VARCHAR(255),
tag1 VARCHAR(10),
tag2 VARCHAR(10),
tag3 VARCHAR(10),
tag4 VARCHAR(10),
tag5 VARCHAR(10),
tag6 VARCHAR(10),
tag7 VARCHAR(10),
tag8 VARCHAR(10),
tag9 VARCHAR(10),
tag10 VARCHAR(10),
FULLTEXT INDEX (tag1, tag2, tag3, tag4, tag5, tag6, tag7, tag8, tag9, tag10)
) DEFAULT CHARSET=utf8;
