gl_THREAD

Makefile.am:
lib_SOURCES += glthread/thread.h glthread/thread.c

Include:
"glthread/thread.h"

Link:
$(LTLIBMULTITHREAD) when linking with libtool, $(LIBMULTITHREAD) otherwise

