SET GLOBAL mroonga_default_tokenizer = TokenDelimit;
SET NAMES UTF8;
CREATE TABLE memos (
id INT PRIMARY KEY,
content TEXT,
FULLTEXT INDEX (content)
) DEFAULT CHARSET=UTF8;
