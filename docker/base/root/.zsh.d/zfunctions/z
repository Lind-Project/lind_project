local cwd
cwd="$PWD"

if ((!$#)); then
	cd $(fasd -ld 2>&1 | sed "/${PWD:t}/ d" | fzf +s --tac --query "$_last_z_args" | sed 's/^[0-9,.]* *//')
	return
fi

_last_z_args="$*"
fasd_cd "${(@s: :)_last_z_args}" >/dev/null

if [[ "$cwd" == "$PWD" ]]; then
	cd $(fasd -ld 2>&1 | sed "/${PWD:t}/ d" | fzf +s --tac --query "$*" | sed 's/^[0-9,.]* *//')
fi
