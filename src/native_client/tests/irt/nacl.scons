Import('env')

######################################################################
# Smoke Test
######################################################################
nexe = env.ComponentProgram('irt_present_test',
                            'irt_present_test.c',
                            EXTRA_LIBS=['${NONIRT_LIBS}'],
                            )

node = env.CommandSelLdrTestNacl(
     'irt_present_test.out',
     nexe,
     )

env.AddNodeToTestSuite(node, ['small_tests'], 'run_irt_present_test')

